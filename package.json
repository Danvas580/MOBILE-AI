{
  "name": "mobile-ai-ecommerce",
  "version": "1.0.0",
  "description": "AI enhanced mobile phones and accessories ecommerce platform",
  "main": "index.js",
  "homepage": "https://pmirera.github.io/Mobile_AI",
"scripts": {
  "dev": "concurrently \"npm run server\" \"npm run client\"",
